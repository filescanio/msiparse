{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build artifacts",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/build.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug msiparse",
            "cargo": {
                "args": [
                    "build",
                    "--bin=msiparse",
                    "--package=msiparse"
                ],
                "filter": {
                    "name": "msiparse",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug msiparse-gui",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gui/__main__.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/gui",
            "args": []
        }
    ]
}